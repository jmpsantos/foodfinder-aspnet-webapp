@model FoodFinder_WebApp.Models.PratoDoDium

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/PaginasSecundariascss.css"/>

<br /><br /><br />
<h3><b> Adicionar Novo Prato</b></h3>
<br />

<div class="row align-content-center">
    <div class="col-md-4 align-content-center">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="color:green;font-weight:bold">
                <label asp-for="Nome" class="control-label text-lg-left"></label>
                <input asp-for="Nome" class="form-control " />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group" style="color:green;font-weight:bold">
                <label asp-for="Descricao" class="control-label text-lg-left"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group" style="color:green;font-weight:bold">
                <label asp-for="Tipo" class="control-label text-lg-left"></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="Carne">Carne</option>
                    <option value="Peixe">Peixe</option>
                    <option value="Vegan">Vegan</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
                <div class="form-group">
                <label class="control-label´" style="color:green;font-weight:bold">Foto do Prato</label>
                <input name="file" type="file" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn2 btn-primary" style="position:relative; left:5%" />
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
