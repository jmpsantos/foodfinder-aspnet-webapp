@model FoodFinder_WebApp.Models.AdicionarPratoDoDium

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/PaginasSecundariascss.css" />

<br /><br /><br />

<h3><b> Adicionar Novo Prato</b></h3>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="color:green;font-weight:bold">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group" style="color:green;font-weight:bold">
                <label asp-for="DataPrato" class="control-label"></label>
                <input asp-for="DataPrato" class="form-control" type="date" />
                <span asp-validation-for="DataPrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn2 btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
