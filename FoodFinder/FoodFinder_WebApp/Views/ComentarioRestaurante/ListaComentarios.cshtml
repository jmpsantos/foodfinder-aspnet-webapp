@model IEnumerable<FoodFinder_WebApp.Models.ComentarioRestaurante>

<style>
    .posimg { position:relative; margin:10px;}
    .imgest {position:absolute; left:-1%;}
     .coment { display:inline; position:absolute; left:1.3%;}
        
</style>
<div class="jumbotron">
    @if (Model != null)
    {
        @foreach (var comentario in Model)
        {
            <br />
            <p style="font-weight:bold">@comentario.ClienteId</p>
            <p>@comentario.DataComentario</p>
            <p>@comentario.ClienteId</p>
            <div class="posimg">
            <img class="imgest" src="~/css/cssImages/estrela.png" width="20" height="20" />
            <p class="coment">@comentario.Rating Garfos</p>
            </div>
            <br />
            <p>@comentario.Corpo</p>
            <br />
            <hr>
        }
    }
    else
    {
        <p>Não existem comentários a apresentar.</p>
    }
</div>